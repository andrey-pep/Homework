ls -l | perl -ne 'tr/\040/\040/s; if(split(/\040/)>2){print join(";", split(/\040/, $_,9))}' > file.txt #создание файла с колонками данных о файлах в директории

perl -lnaF';' -e 'if(0+($F[4])>1048576){print $F[8]; $a++;}}{print "Files:$.; Big_Files:$a" ;' < file.txt  #вывод файлов размером более 1Мб и их количество, общего количества файлов

